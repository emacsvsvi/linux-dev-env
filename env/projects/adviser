export TUCONFIG_CORE=tucanada-devl+ifx

pathadd /home/sparker/bin PATH
pathadd ${JAVA_HOME}/bin PATH
pathadd ${DEPLOY_DIR}/bin PATH
pathadd ${DEPLOY_DIR}/sbin PATH
